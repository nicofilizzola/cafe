{% extends 'base.html.twig' %}

{% block body %}    
    {% if posts is empty == false %}
        {% set i = 0 %}
        {% for key, category in posts %}
            <div 
                class="container-fluid position-relative px-0 pb-0 mb-0 vw-100  
                {{ isMobile ? "mobile d-flex flex-column align-items-center justify-content-center" : "min-vh-sm-100 d-sm-block pt-sm-5 pb-sm-3" }} 
                {{ i % 2 == 0 ? "bg-warning" : "bg-danger" }}">
                {% if isMobile %}
                    {% include "components/postRow/_mobile.html.twig" %}
                {% else %}
                    {% include "components/postRow/_desktop.html.twig" %}
                {% endif %}
            </div>
            {% set i = i + 1 %}
        {% endfor %}
    {% else %}
        <div class="col-md-6 bg-light p-5 mx-auto mt-3 rounded">
            <h2 class="text-center">Il n'y a pas encore des publications. <a href="{{ path('app_post_create') }}">Soyez le premier !</a></h2>
        </div>
    {% endif %}
    {{ encore_entry_script_tags('app_post') }}
{% endblock %}
