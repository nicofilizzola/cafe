{% extends 'base.html.twig' %}

{% block body %}
    {% if posts is empty == false %}
        {% set i = 0 %}
        {% for key, category in posts %}
            <div class="col-12 pt-5 pb-3 {{ i % 2 == 0 ? "bg-warning" : "bg-light" }}">
                <div class="row">
                    <h3 class="text-center">{{ key }}</h3>
                </div>
                <ul class="posts__container">
                    {% for row in category | batch(3) %}
                        <div class="row mt-4 justify-content-center">
                            {% for post in row %}
                                <div class="col-md-3">
                                    <li class="card">
                                        {% set src = post.media[0].type == 1 ? asset("/uploads/post/" ~ post.media[0].imageName) : asset("/images/defaultPost.jpg") %}
                                        <img 
                                            src="{{ src | imagine_filter("card_preview") }}" 
                                            alt="{{ post.title }}" 
                                            class="card-img-top">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ post.title }}</h5>
                                            <a href="#" class="btn btn-primary">Voir cet article</a>
                                        </div>
                                    </li>
                                </div>
                            {% endfor %}
                        </div>
                    {% endfor %}
                    {{ knp_pagination_render(category) }}
                </ul>
            </div>
            {% set i = i + 1 %}
        {% endfor %}
    {% else %}
        <div class="col-md-6 bg-light p-5 mx-auto mt-3 rounded">
            <h2 class="text-center">Il n'y a pas encore des publications. <a href="{{ path('app_post_create') }}">Soyez le premier !</a></h2>
        </div>
    {% endif %}

{% endblock %}
